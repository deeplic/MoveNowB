@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1 class="center flow-text">User Registration</h1>

<div class="row container">
    <div class="col-md-12">
        <form method="post">
            <div class="row">
                <div asp-validation-summary="All" class="red-text"></div>
                <div class="input-field col s12 m6">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="red-text"></span>
                </div>
                <div class="input-field col s12 m6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="red-text"></span>
                </div>
                <div class="input-field col s12 m6">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="red-text"></span>
                </div>
                <div class="input-field col s12 m6">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="red-text"></span>
                </div>
                <button type="submit" class="btn btn-primary right">Register</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}