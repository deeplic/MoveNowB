@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<div class="container">
    <form asp-action="CreateRole" method="post" class="mt-3">
        <div asp-validation-summary="All" class="red-text">
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName">
                <span asp-validation-for="RoleName" class="red-text"></span>
            </div>
            <div class="col s12">
                <button type="submit" class="btn right" style="width:auto">
                    Create Role
                </button>
            </div>
            <div class="center col s12">
                <img src="~/images/roles.svg" width="450" />
            </div>
        </div>
    </form>
</div>
