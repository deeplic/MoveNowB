@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1 class="flow-text center">Edit Role</h1>
<div class="container">
    <form method="post" class="mt-3">
        <div class=" row">
            <input asp-for="Id" disabled type="hidden">
        </div>
        <div class="input-field col s12">
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName">
            <span asp-validation-for="RoleName" class="red-text"></span>
        </div>

        <div asp-validation-summary="All" class="red-text"></div>

        <div class="form-group row">
            <div class="col s12 right">
                <button type="submit" class="btn">Update</button>
                <a asp-action="ListRoles" class="btn orange">Cancel</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="flow-text center">Users in this role</h3>
            </div>
            <div class="card-content">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <p>@user</p>
                    }
                }
                else
                {
                    <p>None at the moment</p>
                }
            </div>
            <div class="card-action">
                <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn" style="width:auto">Add or Remove Users</a>
            </div>
        </div>
    </form>
</div>