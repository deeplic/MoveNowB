@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";
}

<h1 class="center flow-text">All Roles</h1>

<div class="container">
    @if (Model.Any())
    {
        <a class="btn" style="width:auto" asp-action="CreateRole"
           asp-controller="administration">Add new role</a>

        foreach (var role in Model)
        {
            <div class="card">
                <div class="card-content">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-action">
                    <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id" class="btn">Edit</a>
                    <a href="#" class="btn red">Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
                <a class="btn btn-primary" style="width:auto"
                   asp-controller="administration" asp-action="CreateRole">
                    Create Role
                </a>
            </div>
        </div>
    }
</div>
